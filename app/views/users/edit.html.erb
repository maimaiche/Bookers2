 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <br>
       <h2>User info</h2>
       <% if @user.errors.any? %>
       <%= @user.errors.count %>errors prohibited this book from being saved:
       <ul>
         <%= @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ul>
       <% end %>
       <%= form_with model: @user do |f| %>
       <div>
         <%= f.label :Name %><br>
         <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
       </div>
       <div>
         <%= f.label :Image %><br>
         <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
       </div>
       <div>
         <%= f.label :Introdaction %><br>
         <%= f.text_area :introduction, autofocus: true, placeholder: "Introduction" %>
       </div>
       <div class="form-group">
         <p><%= f.submit "Update User", class:"btn btn-secondary" do %>
           <% end %>
         </p>
       </div>
       <% end %>
     </div>
   </div>
 </div>