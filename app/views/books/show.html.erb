<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'list',  book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.id) do %>
              <%=image_tag @book.user.get_profile_image(100,100) %>
              <% end %>
              <p>
                <%= link_to user_path(@user.id) do %>
                <%= @user.name %>
                <% end %>
              </p>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>コメント件数：<%= @book.book_comments.count %></td>
            <td><%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %></td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger" ,method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-8 offset-md-1">
      <% @book_comment.book_comments.each do |book_comment| %>
        <%= book_comment.user_id %>
        <%= book_comment.comment %>
        <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</div>