<div class="col-md-3">
  <br>

  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name <%= user.name %></th>
      </tr>
      <tr>
        <th>introduction <%= user.introduction %></th>
        <th></th>
      </tr>
    </tbody>
  </table>

  <div class="info">
    <p><%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </p>
  </div>

  <h2 class="mt-3">New book</h2>
  <form action="/books" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token"
      value="5i5AhO7Im39Kp0GissjYevovKJEXnXPJrpkTVK0Hu-aG-BF00IEyNw_HwZpOT8meKA9hf4kujeWL_RRCnZWYDA" autocomplete="off">
    <div class="form-group">
      <%= form_with model: Book.new do |f| %>
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>
    <% end %>
  </form>
</div>